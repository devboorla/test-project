<aura:component implements="lightning:availableForFlowScreens,force:appHostable,flexipage:availableForAllPageTypes" controller="ProductListController" access="global" >
	<aura:attribute name="prodList" type="Product2[]" default="[]" />
    <aura:attribute name="selProd" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <form>
        <lightning:layout horizontalAlign="left" verticalAlign="center">
            <lightning:layoutItem padding="around-small">
                <lightning:select name="select" label="Products List"  value="{!v.selProd}">
                    <option value="">Select a Product</option>
                    <aura:iteration items="{!v.prodList}" var="prod">
                        <option value="{!prod.Id}">{!prod.Name}</option>
                    </aura:iteration> 
                </lightning:select>
            </lightning:layoutItem>      
           
        </lightning:layout>
    </form>    
</aura:component>